# AI Reality Check Scorecard - Environment Variables Template
# Copy this file to .env.local for development

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="AI Reality Check Scorecard"

# Database Configuration (PostgreSQL 15+)
# Development example: postgresql://user:password@localhost:5432/ai_scorecard_dev
# Production: Use connection string from your PostgreSQL provider
DATABASE_URL="postgresql://user:password@localhost:5432/ai_scorecard"

# HubSpot CRM Integration (Required for lead management)
HUBSPOT_ACCESS_TOKEN=your_hubspot_private_app_token_here
HUBSPOT_OWNER_ID=your_hubspot_owner_id_for_deals

# Email Service Configuration (Resend recommended)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL="stuart@aireadycheck.com"
FROM_NAME="Stuart Rench"

# Alternative email providers (choose one)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# POSTMARK_API_TOKEN=your_postmark_api_token_here

# Rate Limiting & Caching (Upstash Redis - Optional for MVP)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Analytics & Monitoring (Optional but recommended)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id
VERCEL_TOKEN=your_vercel_token_for_deployment

# SEO & Social Media
GOOGLE_SITE_VERIFICATION=your_google_search_console_verification_code
NEXT_PUBLIC_TWITTER_HANDLE="@StuartRench"

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_32_characters_minimum
NEXTAUTH_URL=http://localhost:3000

# Feature Flags (Development)
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_TEST_MODE=false
ENABLE_RATE_LIMITING=false

# A/B Testing Configuration
NEXT_PUBLIC_AB_TEST_ENABLED=true
AB_TEST_VARIANTS=variant_a,variant_b

# Data Retention Settings
EMAIL_RETENTION_DAYS=30
SESSION_RETENTION_DAYS=7
ANALYTICS_RETENTION_DAYS=365

# Background Jobs (Optional - for production)
# REDIS_URL=redis://localhost:6379
# BULL_DASHBOARD_ENABLED=true

# Third-party Integrations (Optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_for_notifications
# ZAPIER_WEBHOOK_URL=your_zapier_webhook_for_automation

# Development Tools
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development
ANALYZE=false