#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push hooks..."

# 1. Run full test suite (including integration tests)
echo "ğŸ§ª Running full test suite..."
npm run test -- --passWithNoTests --watchAll=false --testTimeout=30000 --maxWorkers=50%

if [ $? -ne 0 ]; then
  echo "âŒ Tests failed! Please fix failing tests before pushing."
  exit 1
fi

# 2. Run test coverage check
echo "ğŸ“Š Checking test coverage..."
npm run test:coverage -- --passWithNoTests --watchAll=false --testTimeout=30000 --coverageThreshold='{"global":{"branches":70,"functions":70,"lines":70,"statements":70}}'

if [ $? -ne 0 ]; then
  echo "âš ï¸  Test coverage below threshold, but allowing push."
  echo "ğŸ’¡ Consider improving test coverage before next release."
fi

# 3. Build the application to ensure it compiles
echo "ğŸ—ï¸  Building application..."
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Please fix build errors before pushing."
  exit 1
fi

# 4. Run additional security checks
echo "ğŸ”’ Running security audit..."
npm audit --audit-level high || {
  echo "âš ï¸  Security vulnerabilities found. Consider running 'npm audit fix'."
  echo "ğŸ’¡ Allowing push, but please address vulnerabilities soon."
}

# 5. Check for TODO/FIXME comments that might indicate incomplete work
echo "ğŸ“ Checking for incomplete work markers..."
TODO_COUNT=$(git diff --cached --name-only | xargs grep -l "TODO\|FIXME\|XXX\|HACK" 2>/dev/null | wc -l)
if [ "$TODO_COUNT" -gt 0 ]; then
  echo "âš ï¸  Found $TODO_COUNT files with TODO/FIXME markers in staged changes."
  echo "ğŸ’¡ Consider addressing these before pushing to main branch."
fi

# 6. Validate package.json and package-lock.json are in sync
if [ -f "package-lock.json" ]; then
  echo "ğŸ” Validating package-lock.json is in sync..."
  npm ci --dry-run > /dev/null 2>&1
  if [ $? -ne 0 ]; then
    echo "âŒ package-lock.json is out of sync! Run 'npm install' to fix."
    exit 1
  fi
fi

echo "âœ… All pre-push checks passed! Ready to push."