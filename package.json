{
  "name": "ai-reality-check-scorecard",
  "version": "1.0.0",
  "description": "AI Reality Check Scorecard - Executive assessment platform for AI readiness evaluation",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:components": "jest --testPathPattern=components",
    "test:api": "jest --testPathPattern=api",
    "test:db": "jest --testPathPattern=database",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=html",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:single": "jest --passWithNoTests",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:push:test": "dotenv -e .env.test -- prisma db push",
    "db:reset": "prisma migrate reset",
    "db:reset:test": "dotenv -e .env.test -- prisma migrate reset --force",
    "db:seed:test": "dotenv -e .env.test -- prisma db seed",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit --audit-level moderate",
    "security:secrets": "node scripts/check-secrets.js",
    "hooks:test": "echo 'Testing git hooks...' && npm run typecheck && npm run lint && npm run test:single",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@hubspot/api-client": "^10.2.0",
    "@next/bundle-analyzer": "^14.2.5",
    "@prisma/client": "^5.16.2",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@react-email/components": "^0.0.21",
    "@react-email/render": "^0.0.15",
    "@upstash/ratelimit": "^1.2.1",
    "@upstash/redis": "^1.31.6",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.3.8",
    "lucide-react": "^0.539.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.52.1",
    "resend": "^3.5.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.9.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "autoprefixer": "^10.4.19",
    "dotenv-cli": "^10.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "faker": "^6.6.6",
    "git-secrets": "^0.0.11",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "msw": "^2.10.4",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "prisma": "^5.16.2",
    "supertest": "^7.1.4",
    "tailwindcss": "3.4.6",
    "ts-jest": "^29.4.1",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
